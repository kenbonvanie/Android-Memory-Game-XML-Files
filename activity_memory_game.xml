
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MemoryGame"
    android:background="#ff1cbfff">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_centerHorizontal="true"
        android:weightSum="1"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true">




        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Memory Burst"
            android:id="@+id/header"
            android:layout_gravity="center_horizontal"
            android:longClickable="true"
            android:textStyle="bold"
            android:textSize="48dp"
            android:layout_marginBottom="30dp" />


        <GridLayout
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp">

            <Button
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginRight="200px"
                android:id="@+id/mainredt"
                android:background="@drawable/roundedbuttonred"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="150px" />

            <Button
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginRight="200px"
                android:id="@+id/mainyellowt"
                android:background="@drawable/roundedbuttonyellow"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="150px" />

            <Button
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginRight="200px"
                android:id="@+id/mainblackt"
                android:background="@drawable/roundedbutton"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="150px" />

            <Button
                android:layout_row="0"
                android:layout_column="3"
                android:layout_marginRight="200px"
                android:id="@+id/mainbluet"
                android:background="@drawable/roundedbuttonblue"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="150px" />

            <Button
                android:layout_row="0"
                android:layout_column="4"
                android:id="@+id/maingreent"
                android:background="@drawable/roundedbuttongreen"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="150px" />

        </GridLayout>

        <Button
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:text="New Game"
            android:id="@+id/newGame"
            android:layout_gravity="center_horizontal"
            android:background="#ffefff1c"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="24dp"
            android:onClick="onButtonClick"
            android:singleLine="true" />




        <!--<Button
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:text="High Scores"
            android:id="@+id/highScore"
            android:layout_gravity="center_horizontal"
            android:background="#ffefff1c"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="24dp"
            android:onClick="onButtonClick" />-->

        <Button
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:text="Instructions / About"
            android:id="@+id/instructions"
            android:layout_gravity="center_horizontal"
            android:background="#ffefff1c"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:onClick="onButtonClick" />

        <Button
            android:layout_width="207dp"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:id="@+id/exit"
            android:layout_gravity="center_horizontal"
            android:background="#ffefff1c"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textSize="24dp"
            android:onClick="onButtonClick"
            android:layout_marginBottom="30dp"/>

        <GridLayout
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="150px"
            android:layout_marginBottom="30dp">

            <Button
                android:layout_row="0"
                android:layout_column="0"
                android:id="@+id/maingreenb"
                android:layout_marginRight="200px"
                android:background="@drawable/roundedbuttongreen"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="150px" />

            <Button
                android:layout_row="0"
                android:layout_column="1"
                android:id="@+id/mainblueb"
                android:layout_marginRight="200px"
                android:background="@drawable/roundedbuttonblue"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="150px" />

            <Button
                android:layout_row="0"
                android:layout_column="2"
                android:id="@+id/mainblackb"
                android:layout_marginRight="200px"
                android:background="@drawable/roundedbutton"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="150px" />

            <Button
                android:layout_row="0"
                android:layout_column="3"
                android:id="@+id/mainyellowb"
                android:layout_marginRight="200px"
                android:background="@drawable/roundedbuttonyellow"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="150px" />

            <Button
                android:layout_row="0"
                android:layout_column="4"
                android:id="@+id/mainredb"
                android:layout_marginRight="200px"
                android:background="@drawable/roundedbuttonred"
                android:alpha="0.2"
                android:layout_width="wrap_content"
                android:layout_height="150px" />

        </GridLayout>

    </LinearLayout>
</RelativeLayout>
