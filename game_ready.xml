<?xml version="1.0" encoding="utf-8"?>

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff1cbfff">

    <GridLayout
        android:layout_row="0"
        android:layout_column="0">
        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Speed: "
            android:longClickable="true"
            android:textStyle="bold" />

        <RadioButton
            android:text="Fast: "
            android:id="@+id/fast"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onButtonClick" />

        <RadioButton
            android:text="Medium: "
            android:id="@+id/med"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="onButtonClick" />

        <RadioButton
            android:text="Slow: "
            android:layout_row="0"
            android:id="@+id/slow"
            android:layout_column="3"
            android:onClick="onButtonClick" />

    </GridLayout>

    <GridLayout
        android:layout_row="1"
        android:layout_column="0">

        <TextView
            android:layout_marginTop="130px"
            android:layout_row="0"
            android:layout_column="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="How many to flashes to remember at the beginning? Min: 3 Max: 10."
            android:longClickable="true"
            android:textStyle="bold" />
        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/spinner1"
            android:layout_row="2"
            android:layout_column="0" />
    </GridLayout>

    <GridLayout
        android:layout_marginTop="130px"
        android:layout_row="2"
        android:layout_column="0">
        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Sounds: "
            android:longClickable="true"
            android:textStyle="bold" />

        <RadioButton
            android:text="Piano "
            android:id="@+id/piano"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="onButtonClick" />

        <RadioButton
            android:text="Guitar "
            android:id="@+id/guitar"
            android:layout_row="0"
            android:layout_column="2"
            android:onClick="onButtonClick" />


    </GridLayout>


    <GridLayout
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <Button
            android:layout_row="0"
            android:layout_column="0"
            android:layout_marginRight="200px"
            android:id="@+id/mainredt"
            android:background="@drawable/roundedbuttonred"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="150px" />

        <Button
            android:layout_row="0"
            android:layout_column="1"
            android:layout_marginRight="200px"
            android:id="@+id/mainyellowt"
            android:background="@drawable/roundedbuttonyellow"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="150px" />

        <Button
            android:layout_row="0"
            android:layout_column="2"
            android:layout_marginRight="200px"
            android:id="@+id/mainblackt"
            android:background="@drawable/roundedbutton"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="150px" />

        <Button
            android:layout_row="0"
            android:layout_column="3"
            android:layout_marginRight="200px"
            android:id="@+id/mainbluet"
            android:background="@drawable/roundedbuttonblue"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="150px" />

        <Button
            android:layout_row="0"
            android:layout_column="4"
            android:id="@+id/maingreent"
            android:background="@drawable/roundedbuttongreen"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="150px" />

    </GridLayout>

    <GridLayout
        android:layout_gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="150px"
        android:layout_marginTop="30dp">

        <Button
            android:layout_row="0"
            android:layout_column="0"
            android:id="@+id/maingreenb"
            android:layout_marginRight="200px"
            android:background="@drawable/roundedbuttongreen"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="150px" />

        <Button
            android:layout_row="0"
            android:layout_column="1"
            android:id="@+id/mainblueb"
            android:layout_marginRight="200px"
            android:background="@drawable/roundedbuttonblue"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="150px" />

        <Button
            android:layout_row="0"
            android:layout_column="2"
            android:id="@+id/mainblackb"
            android:layout_marginRight="200px"
            android:background="@drawable/roundedbutton"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="150px" />

        <Button
            android:layout_row="0"
            android:layout_column="3"
            android:id="@+id/mainyellowb"
            android:layout_marginRight="200px"
            android:background="@drawable/roundedbuttonyellow"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="150px" />

        <Button
            android:layout_row="0"
            android:layout_column="4"
            android:id="@+id/mainredb"
            android:layout_marginRight="200px"
            android:background="@drawable/roundedbuttonred"
            android:alpha="0.2"
            android:layout_width="wrap_content"
            android:layout_height="150px" />

    </GridLayout>



    <Button
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:background="#ffefff1c"
        android:textStyle="bold"
        android:textSize="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Game"
        android:id="@+id/startGame"
        android:layout_row="23"
        android:layout_column="0"
        android:onClick="onButtonClick" />

</GridLayout>
